<p>
  Explore the hiking trails of {{ locations.location_name }}, North Carolina!
</p>

<div class="section">
  <div class="container">
    <div class="columns is-multiline is-vcentered is-centered has-text-centered">
      {{#each locations.trails as |trail|}}
      {{> search-details}}
      {{/each}}
    </div>
  </div>
</div>

<div class="edit-trails-container">
  <h2>
    Submit a trail!
  </h2>
  <form class="edit-trails-form">
    <label for="trail_name">
      Trail Name:
    </label>
    <br />
    <textarea id="trail_name" name="trail_name" rows="2" cols="30">
      {{trail_name}}
    </textarea>
    <br />
    <label for="distance">
      Distance:
    </label>
    <br />
    <textarea id="distance" name="distance" rows="5" cols="30">
      {{distance}}
    </textarea>
    <br />
    <label for="guest_name">
      Guest Name:
    </label>
    <br />
    <textarea id="guest_name" name="guest_name" rows="2" cols="30">
      {{guest_name}}
    </textarea>
    <br />
    <br />
    <input type="checkbox" id="has_nuts" name="has_nuts" value="true" />
    <label for="has_nuts">
      Check box if this dish contains nuts
    </label>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>

<div class="section">
  <div class="card">
    <div class="card-content">
      <form id="new-trail-form" class="form">
        <div class="field is-horizontal">
          <div class="field-body">
            <div class="field">
              <label class="label">Trail Name</label>
              <div class="control is-expanded">
                <input type="text" id="trail-input" class="input" placeholder="Trail Name">
              </div>
            </div>

            <div class="field">
              <label class="label">Search Location</label>
              <div class="control">
                <div id="location-input" class="select">
                  <select>
                    <option>Select Location</option>
                    <option>Locations</option>
                    <option>Locations</option>
                    <option>Locations</option>
                    <option>Locations</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="field">
              <label class="label">Select Difficulty Level</label>
              <div class="control">
                <div id="difficulty-input" class="select">
                  <select>
                    <option>Select Difficulty Level</option>
                    <option>Challenging</option>
                    <option>Doable</option>
                    <option>Easy</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="field">
              <label class="label">Distance</label>
              <div class="control">
                <input type="text" id="distance-input" class="input" placeholder="miles">
              </div>
            </div>

            <div class="field">
              <div id="feature-input" class="control">
                <label class="is-size-5">Choose Features</label>
                <br>
                <input id="restrooms" class="checkbox" type="checkbox">
                <label for="restrooms">
                  Restrooms
                </label>
                <br>

                <input id="pet-friendly" class="checkbox" type="checkbox">
                <label for="pet-friendly">
                  Pet Friendly
                </label>
                <br>

                <input id="stroller-accessible" class="checkbox" type="checkbox">
                <label for="stroller-accessible">
                  Stroller Accessible
                </label>
              </div>
            </div>

            <div class="field is-grouped">
              <div class="control">
                <input type="submit" value="Submit" class="button is-link"></input>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>