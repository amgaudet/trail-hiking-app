<div class="section">
  <div class="columns is-vcentered is-centered">
    <div class="column is-4">
      <form action="" class="box" id="login">
        <div class="field">
          <label for="" class="label">Email</label>
          <div class="control has-icons-left">
            <input id="email-login" type="email" placeholder="e.g. bobsmith@gmail.com" class="input" required>
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <label for="" class="label">Password</label>
          <div class="control has-icons-left">
            <input id="password-login" type="password" placeholder="*******" class="input" required>
            <span class="icon is-small is-left">
              <i class="fa fa-lock"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <label for="" class="checkbox">
            <input type="checkbox">
            Remember me
          </label>
        </div>
        <div class="field">
          <button class="button is-success">
            Login
          </button>
        </div>
      </form>
    </div>

    <div class="column is-4">
      <form action="" class="box" id="sign-up">
        <div class="field">
          <label for="" class="label">Username</label>
          <div class="control has-icons-left">
            <input id="name-signup" type="name" placeholder="trailblazer" class="input" required>
            <span class="icon is-small is-left">
              <i class="fa fa-user"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <label for="" class="label">Email</label>
          <div class="control has-icons-left">
            <input id="email-signup" type="email" placeholder="e.g. bobsmith@gmail.com" class="input" required>
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <label for="" class="label">Password</label>
          <div class="control has-icons-left">
            <input id="password-signup" type="password" placeholder="Must Be 8 Characters Long" class="input" required>
            <span class="icon is-small is-left">
              <i class="fa fa-lock"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <button class="button is-vcentered is-primary is-outlined">
            Sign Up
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>