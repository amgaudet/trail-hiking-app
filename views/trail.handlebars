<div class="section">
  <div class="container">
    <div class="columns is-multiline is-vcentered is-centered">
      <div class="column is-3">
        <div class="card">
          <div class="card-image">
            <figure class="image">
              <img src="{{ trail.galleries.[0].url }}" alt="Trail Image">
            </figure>
          </div>
          <div class="card-content">
            <div class="content">
              <h3>{{ trail.trail_name }}</h3>
              <h4>Located near {{ trail.location.location_name }} </h4>
              <h4>Click <a
                  href="http://maps.google.com/maps?z=12&t=m&q=loc:{{trail.latitude}}+{{trail.longitude}}">here</a> for
                directions!</h4>
              <div class="field is-horizontal">
                <div class="field-body">
                  <div class="field">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="card-content">
        <ul>
          <li>Trail Type: {{ trail.type }}</li>
          <li>Difficulty: {{ trail.difficulty }}</li>
          <li>Distance: {{ trail.distance }} miles</li>
          <li>Elevation Gain:{{ trail.elevation_gain }} ft.</li>
          <li>Features:</li>
          {{#each trail.features as |feature|}}
          <li>{{ feature_name }} </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

